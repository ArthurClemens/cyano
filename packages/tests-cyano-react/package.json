{
  "name": "tests-cyano-react",
  "description": "Test Cyano with React",
  "private": true,
  "main": "dist/js/index",
  "version": "0.3.0",
  "license": "MIT",
  "scripts": {
    "lint": "eslint ./src",
    "dev": "npm-run-all --parallel dev:watch dev:serve",
    "dev:serve": "CYANO=cyano-react ../../node_modules/webpack-dev-server/bin/webpack-dev-server.js --config ../../scripts/webpack.config.dev.js --disableHostCheck true --port 3100 --host 0.0.0.0",
    "dev:watch": "CYANO=cyano-react ../../node_modules/webpack/bin/webpack.js --watch --config ../../scripts/webpack.config.dev.js",
    "webpack": "CYANO=cyano-react ../../node_modules/webpack/bin/webpack.js --config ../../scripts/webpack.config.prod.js",
    "build": "npm run build:webpack",
    "build:webpack": "npm run clean && npm run webpack",
    "build:browserify": "CYANO=cyano-react node ../../scripts/browserify.js",
    "serve": "http-server -c-1 -p 8080 dist",
    "build:rollup": "CYANO=cyano-react ../../node_modules/rollup/bin/rollup -c ../../scripts/rollup.umd.js",
    "clean": "rimraf dist/js/*",
    "test": "npm run test:cypress",
    "test:cypress": "npm run build && start-server-and-test serve 8080 cypress:run",
    "test:cypress:i": "npm run build && npm-run-all --parallel serve cypress:open",
    "cypress:run": "cypress run",
    "cypress:open": "cypress open"
  },
  "dependencies": {
    "cyano-react": "^0.3.0",
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "tests-cyano-shared": "^0.3.0"
  },
  "devDependencies": {
    "cypress": "^3.2.0",
    "http-server": "^0.11.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^2.6.3",
    "start-server-and-test": "^1.7.12"
  }
}

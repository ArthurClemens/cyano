{
  "name": "cyano",
  "version": "0.0.1",
  "description": "Takes a base component and returns a Mithril or React component",
  "main": "dist/cyano",
  "module": "dist/cyano.mjs",
  "scripts": {
    "lint": "eslint ./src",
    "build": "npm run clean && npm run rollup && npm run build-tests",
    "build-tests": "npm run build-tests:transpiling && npm run build-tests:components",
    "build-tests:transpiling": "ENTRY=cypress/server/js/transpiling-mithril.js DEST=cypress/server/js/transpiling-mithril-bundle NAME=transpiling ./node_modules/rollup/bin/rollup -c ./scripts/rollup.umd.js && ENTRY=cypress/server/js/transpiling-react.js DEST=cypress/server/js/transpiling-react-bundle NAME=transpiling ./node_modules/rollup/bin/rollup -c ./scripts/rollup.umd.js",
    "build-tests:components": "ENTRY=cypress/server/components/index.js DEST=cypress/server/components/bundle NAME=components ./node_modules/rollup/bin/rollup -c ./scripts/rollup.umd.js",
    "rollup": "npm run rollup-mithril && npm run rollup-react && npm run rollup-both",
    "rollup-mithril": "ENTRY=src/mithril.js DEST=dist/mithril/cyano ./node_modules/rollup/bin/rollup -c ./scripts/rollup.umd.js && ENTRY=src/mithril.js DEST=dist/mithril/cyano ./node_modules/rollup/bin/rollup -c ./scripts/rollup.es.js",
    "rollup-react": "ENTRY=src/react.js DEST=dist/react/cyano ./node_modules/rollup/bin/rollup -c ./scripts/rollup.umd.js && ENTRY=src/react.js DEST=dist/react/cyano ./node_modules/rollup/bin/rollup -c ./scripts/rollup.es.js",
    "rollup-both": "ENTRY=src/index.js DEST=dist/cyano ./node_modules/rollup/bin/rollup -c ./scripts/rollup.umd.js && ENTRY=src/index.js DEST=dist/cyano ./node_modules/rollup/bin/rollup -c ./scripts/rollup.es.js",
    "clean": "rimraf dist/*",
    "test": "npm run test:mocha && npm run test:cypress",
    "test:mocha": "mocha --require @babel/register test",
    "server:start": "http-server -c-1 -p 8080 .",
    "cypress:run": "cypress run",
    "cypress:open": "cypress open",
    "test:cypress": "start-server-and-test server:start 8080 cypress:run",
    "test:cypress:i": "npm-run-all --parallel server:start cypress:open",
    "size": "npm run size:react && npm run size:mithril",
    "size:react": "gzip -c dist/cyano-react.js | wc -c",
    "size:mithril": "gzip -c dist/cyano-mithril.js | wc -c"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "author": "Arthur Clemens <arthurclemens@gmail.com> (http://visiblearea.com)",
  "homepage": "https://github.com/ArthurClemens/cyano",
  "license": "MIT",
  "dependencies": {
    "mithril-hookup": "^0.2.5",
    "react-hyperscript": "^3.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.4",
    "@babel/plugin-external-helpers": "^7.2.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.3.4",
    "@babel/plugin-transform-arrow-functions": "^7.2.0",
    "@babel/plugin-transform-object-assign": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "chai": "^4.2.0",
    "cypress": "^3.2.0",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.11.2",
    "http-server": "^0.11.1",
    "jsdom": "^14.0.0",
    "mithril": "2.0.0-rc.4",
    "mithril-node-render": "2.3.2",
    "mithril-query": "^2.5.2",
    "mocha": "^6.0.2",
    "npm-run-all": "4.1.5",
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "rimraf": "^2.6.3",
    "rollup": "^1.6.0",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^9.2.1",
    "rollup-plugin-eslint": "^5.0.0",
    "rollup-plugin-node-resolve": "^4.0.1",
    "rollup-plugin-pathmodify": "^1.0.1",
    "rollup-plugin-terser": "^4.0.4",
    "rollup-watch": "^4.3.1",
    "start-server-and-test": "^1.7.12"
  },
  "peerDependencies": {
    "mithril": "2.0.0-rc.4",
    "react": "^16.8.4"
  }
}
